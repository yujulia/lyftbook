<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>
<body>
   <% include ../partials/nav.ejs %>

   <div class="content">
      <section class="looks clearfix">
         <ul>
             <% looks.forEach(function(look) { %>
                 <li class="entry">
                     <header class="entry-header clearfix">
                        <div class="entry-date">
                           <div class="entry-month"><%= look.date.month %></div>
                           <div class="entry-day"><%= look.date.day %></div>
                           <div class="entry-year"><%= look.date.year %></div>
                        </div>
                        <h2 class="entry-title"><%= look.title %></h2>
                        <p class="entry-info"><%= look.info %></p>
                        <div class="people">
                        <% look.people.forEach(function(person) { %>
                           <span class="person"><%= person %></span>
                        <% }); %>
                        </div>
                     </header>

                     <a href="/<%= look.id %>"><img src="<%= look.image %>" class="entry-image"></a>
                 </li>
             <% }); %>
         </ul>
      </section>

      <% include ../partials/aside.ejs %>
   </div>
</body>
</html>